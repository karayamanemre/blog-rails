<section class="bg-gray-200 p-6 mt-20 mx-8">
  <h2 class="text-2xl font-bold">Edit User</h2>
<%= form_for(@user, url: user_path(@user), html: { method: :put }) do |f| %>
<%= render "devise/shared/error_messages", resource: @user %>
<div class="mt-4">
<%= f.label :email, class: "block font-medium text-gray-700" %>
<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 w-96 block rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0" %>
</div>
<div class="mt-4">
<%= f.label :bio, class: "block font-medium text-gray-700" %>
<%= f.text_field :bio, class: "mt-1 w-96 block rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0" %>
</div>
<div class="mt-4">
<%= f.label :photo, class: "block font-medium text-gray-700" %>
<%= f.text_field :photo, class: "mt-1 w-96 block rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0" %>
</div>
<div class="mt-4">
<%= f.label :password, class: "block font-medium text-gray-700" %>
<i>(leave blank if you don't want to change it)</i>
<%= f.password_field :password, autocomplete: "new-password", class: "mt-1 w-96 block rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0" %>
<em class="text-gray-500"><%= Devise.password_length.min %> characters minimum</em>
</div>
<div class="mt-4">
  <%= f.label :password_confirmation, class: "block font-medium text-gray-700" %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 w-96 block rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0" %>
</div>

<div class="mt-4">
  <%= f.label :current_password, class: "block font-medium text-gray-700" %>
  <i>(we need your current password to confirm your changes)</i>
  <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 w-96 block rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0" %>
</div>

<div class="mt-8">
  <%= button_tag type: 'submit', class:'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' do %>
    Update Info
  <% end %>
</div>
<% end %>

  <p class="mt-4">Unhappy? <%= link_to "Cancel my account", user_path(@user), method: :delete, data: { confirm: "Are you sure?" } %></p>
  <%= link_to :back, class:'btn mt-4' do %>
    <i class="fas fa-chevron-left"></i> Back
  <% end %>
</section>
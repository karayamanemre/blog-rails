<section class="bg-gray-100 p-6 mt-20 mx-8">
  <h2 class="text-2xl font-bold mb-4">Create a Post</h2>
  <%= form_with model: @post, url: user_posts_path(current_user) do |form| %>
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <%= form.label :title, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      <%= form.label :text, class: "block text-gray-700 font-bold mb-2 mt-4" %>
      <%= form.text_area :text, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      <%= form.submit "Create a Post", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4" %>
    </div>
  <% end %>
</section>
